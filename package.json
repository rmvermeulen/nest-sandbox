{
  "name": "test",
  "version": "2.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon -e ts,json",
    "test": "jest",
    "tests": "jest --watch",
    "types": "types-installer install --toDev",
    "precommit": "lint-staged",
    "format": "prettier --write",
    "fix": "tslint --fix -p tsconfig.json -t stylish",
    "fix:show-errors": "yarn fix -t code-frame"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn format",
      "yarn fix:show-errors",
      "git add",
      "jest --findRelatedTests"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "./setupJest.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@controllers/(.*)": "<rootDir>/src/app/controllers/$1/$1.controller",
      "@modules/(.*)": "<rootDir>/src/app/modules/$1/$1.module",
      "@middlewares/(.*)": "<rootDir>/src/app/middlewares/$1/$1.middleware"
    }
  },
  "dependencies": {
    "@nestjs/common": "^4.0.2",
    "@nestjs/core": "^4.0.2",
    "@nestjs/graphql": "^2.0.0",
    "@nestjs/microservices": "^4.0.2",
    "@nestjs/testing": "^4.0.2",
    "@nestjs/websockets": "^4.0.2",
    "apollo-server-express": "^1.3.2",
    "bluebird": "^3.5.1",
    "graphql": "^0.13.0",
    "graphql-tools": "^2.21.0",
    "ramda": "^0.25.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.3",
    "tsconfig-paths": "^3.1.1"
  },
  "devDependencies": {
    "@types/": "nestjs/graphql",
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.0.36",
    "@types/graphql": "^0.12.4",
    "@types/jest": "^22.1.3",
    "@types/node": "^8.0.19",
    "@types/prettier": "^1.10.0",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/reflect-metadata": "^0.1.0",
    "@types/sinon": "^4.1.3",
    "@types/supertest": "^2.0.4",
    "@types/typescript": "^2.0.0",
    "chai": "^4.1.1",
    "husky": "^0.14.3",
    "jest": "^22.2.2",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.10.2",
    "sinon": "^2.4.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "tslint-config-standard": "^7.0.0",
    "types-installer": "^1.4.0",
    "typescript": "^2.4.2"
  },
  "main": "index.js",
  "author": "Rasmus Vermeulen <vermeulen.rasmus@gmail.com>"
}
