{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noLib": false,
    "paths": {
      "@app/*": ["src/app/*"],
      "@controllers/*": ["src/app/controllers/*"],
      "@middlewares/*": ["src/app/middlewares/*"],
      "@modules/*": ["src/app/modules/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
